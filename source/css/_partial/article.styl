      }
    }
#toc {
    float: right;
    font-size: .9em;
    line-height: 1.65em;
    a {
        color: #108ee9;
        &:visited {
            color: #108ee9;
        } 
        &:hover {
            color: #108ee9;
            text-decoration: none;
        }
    }
    li:hover {
        background: none;
        li:hover {
            text-decoration: underline;
        }
    }
    .toc-title {
        font-weight: bold;
        color: #444;
        text-align: left;
        display: block;
        border-bottom:1px solid #ccc;
    }
    .toc {
        padding: 10px 0;
        padding-right: 0;
        li {
            list-style-type: none;
        }
    }
    ol {
        margin-left: 0;
    }
    .toc-child {
        padding-left: 1.25em;
        margin: 4px 0; 
    }
    .toc-link:hover {
        text-decoration: underline;
    }
}


/* copyright */
.copyright {
width: 85%;
    max-width: 45em;
    margin: 0 auto;
    padding: 0.5em 1.8em;
    border: 1px solid #d2eafb;
    font-size: 0.93em;
    line-height: 1.6em;
    word-break: break-word;
    background: #ecf6fd;
   
    border-radius: 6px;
    span {
        margin-right: 1em;
        color: #555;
        font-weight: bold;
    }
    a {
      color: #444;
        &:hover {
            text-decoration: underline;
        }
    }
    &:hover p .copy-path::after {
        content: "复制";
    }
    .post-url:hover {
        font-weight: normal;
    }
    .copy-path {
        margin-left: 1em;
        &:hover {
            color: gray;
            cursor: pointer;
        }
    }
}




